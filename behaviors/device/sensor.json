{
  "id": "sensor-001",
  "name": "环境监测行为",
  "type": "sensor",
  "description": "读取环境传感器数据",
  "category": "device",
  "functions": {
    "read_environment": {
      "name": "读取环境数据",
      "description": "读取环境传感器数据",
      "input_params": {
        "sensor_types": {
          "type": "array",
          "description": "要读取的传感器类型",
          "required": true,
          "items": "string",
          "options": ["temperature", "humidity", "air_quality", "pressure"]
        },
        "precision": {
          "type": "number",
          "description": "数据精度（小数位数）",
          "required": false,
          "default": 2,
          "min": 0,
          "max": 4
        }
      },
      "output_params": {
        "data": {
          "type": "object",
          "description": "传感器数据对象",
          "properties": {
            "temperature": "number",
            "humidity": "number",
            "air_quality": "number",
            "pressure": "number"
          }
        },
        "timestamp": {
          "type": "string",
          "description": "数据采集时间戳",
          "format": "ISO8601"
        },
        "quality": {
          "type": "string",
          "description": "数据质量等级",
          "enum": ["excellent", "good", "fair", "poor"]
        }
      },
      "implementation": {
        "steps": [
          {
            "step": 1,
            "action": "initialize_sensors",
            "description": "初始化传感器"
          },
          {
            "step": 2,
            "action": "read_raw_data",
            "description": "读取原始传感器数据"
          },
          {
            "step": 3,
            "action": "calibrate_data",
            "description": "校准数据"
          },
          {
            "step": 4,
            "action": "format_output",
            "description": "格式化输出数据"
          }
        ]
      }
    },
    "calibrate_sensor": {
      "name": "校准传感器",
      "description": "校准环境传感器",
      "input_params": {
        "sensor_id": {
          "type": "string",
          "description": "传感器ID",
          "required": true
        },
        "reference_value": {
          "type": "number",
          "description": "参考值",
          "required": true
        }
      },
      "output_params": {
        "success": {
          "type": "boolean",
          "description": "校准是否成功"
        },
        "calibration_factor": {
          "type": "number",
          "description": "校准因子"
        },
        "accuracy": {
          "type": "number",
          "description": "校准精度"
        }
      },
      "implementation": {
        "steps": [
          {
            "step": 1,
            "action": "read_current_value",
            "description": "读取当前传感器值"
          },
          {
            "step": 2,
            "action": "calculate_factor",
            "description": "计算校准因子"
          },
          {
            "step": 3,
            "action": "apply_calibration",
            "description": "应用校准"
          },
          {
            "step": 4,
            "action": "verify_accuracy",
            "description": "验证校准精度"
          }
        ]
      }
    },
    "check_sensor_health": {
      "name": "检查传感器健康状态",
      "description": "检查传感器的工作状态和健康度",
      "input_params": {
        "sensor_id": {
          "type": "string",
          "description": "传感器ID",
          "required": true
        }
      },
      "output_params": {
        "health_status": {
          "type": "string",
          "description": "健康状态",
          "enum": ["excellent", "good", "fair", "poor", "failed"]
        },
        "last_reading": {
          "type": "object",
          "description": "最后读数"
        },
        "error_count": {
          "type": "number",
          "description": "错误次数"
        }
      },
      "implementation": {
        "steps": [
          {
            "step": 1,
            "action": "read_sensor_status",
            "description": "读取传感器状态"
          },
          {
            "step": 2,
            "action": "check_error_log",
            "description": "检查错误日志"
          },
          {
            "step": 3,
            "action": "test_sensor_response",
            "description": "测试传感器响应"
          },
          {
            "step": 4,
            "action": "evaluate_health",
            "description": "评估健康状态"
          }
        ]
      }
    }
  },
  "parameters": {
    "sensor_types": ["temperature", "humidity", "air_quality"],
    "report_interval": 300,
    "alert_thresholds": {
      "temperature": 35.0,
      "humidity": 80.0
    }
  }
}
